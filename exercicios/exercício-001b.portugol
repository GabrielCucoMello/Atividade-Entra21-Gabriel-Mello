/*Versão 004

*/

programa {
  funcao inicio() 
  {
    inteiro altura, base, perimetro, area
    
    escreva("Digite a base do retângulo em centímetros: ")
    leia(base)

    escreva("Digite a altura do retângulo em centímetros: ")
    leia(altura)

    perimetro = 2 * (base + altura)
    area = base * altura

    escreva("\nO perímetro do retângulo é ", perimetro, (" centímetros quadrados.")
    escreva("\nA área do retângulo é ", area, (" centímetros quadrados.\n")

    se (perimetro > area)
    escreva("\nO perímtetro do retângulo é maior do que a área.")

    senao se (area > perimetro)
    escreva("\nA área do retângulo é maior do que o perímetro.")
  }
}